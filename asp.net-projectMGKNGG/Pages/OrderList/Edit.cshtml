@page
@model asp.net_projectMGKNGG.EditModel
@{
    ViewData["Title"] = "Edit Order Page";
}






<h2 class="text-info">Edit Order</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Name" class="form-control" />
            </div>
            <span asp-validation-for="Order.Name" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Author" class="form-control" />
            </div>
            <span asp-validation-for="Order.Author" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.OpisZamowienia"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.OpisZamowienia" class="form-control" />
            </div>
            <span asp-validation-for="Order.OpisZamowienia" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Data"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Data" class="form-control" />
            </div>
            <span asp-validation-for="Order.Data" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>

    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}