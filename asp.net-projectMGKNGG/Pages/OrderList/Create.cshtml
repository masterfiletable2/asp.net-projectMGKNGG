@page
@model asp.net_projectMGKNGG.CreateModel
@{
    ViewData["Title"] = "Create Order Page";
}


<h2 class="text-info">Create New Order</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Author" class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.OpisZamowienia"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.OpisZamowienia" class="form-control" />
            </div>
        </div>
        <input type="submit" value="Create"/>
    </form>
</div>