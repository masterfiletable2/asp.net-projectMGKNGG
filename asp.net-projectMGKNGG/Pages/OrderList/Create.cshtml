@page
@model asp.net_projectMGKNGG.CreateModel
@{
    ViewData["Title"] = "Create Order Page";
}


<h2 class="text-info">Prosta aplikacja zamówień z użyciem MVC z Razor Pages</h2>

<div class="border p-3 mt-3" >
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Temat"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Temat" class="form-control" />
            </div>
            <span asp-validation-for="Order.Temat" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Zleceniodawca"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Zleceniodawca" class="form-control" />
            </div>
            <span asp-validation-for="Order.Zleceniodawca" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.OpisZamowienia"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.OpisZamowienia" class="form-control" />
            </div>
            <span asp-validation-for="Order.OpisZamowienia" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Order.Data"></label>
            </div>
            <div class="col-6">
                <input asp-for="Order.Data" class="form-control" />
            </div>
            <span asp-validation-for="Order.Data" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Dodaj" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Wróć do Listy zamówień</a>
            </div>
        </div>

    </form>
</div>


@section Scripts{
 <partial name="_ValidationScriptsPartial" />
}